{.section items}
  {.repeated section @}
    {.folder?}
    <!-- ignoring folder {collection.navigationTitle|htmltag} -->
    {.or}
      {.section collection}
    <div class="row column home-big-link">
        <a href="{fullUrl|htmlattr}">
            <div class="small-5 columns text">
                <h3>{navigationTitle|htmltag}</h3>
                {.if description}
                <div class="tagline">{description}</div>
                {.end}
            </div>
            <div class="small-7 columns image">
                {.if mainImage}
                <img src="{mainImage.assetUrl|htmlattr}" />
                {.end}
            </div>
        </a>
    </div>
      {.end}
      {.section externalLink}
    <div class="row home-big-link external-link">
        <a href="{url|htmlattr}">
            <div class="small-5 columns text">
                <h3>{title|htmltag}</h3>
            </div>
            <div class="small-7 columns image"></div>
        </a>
    </div>
      {.end}
    {.end}
  {.end}
{.end}

