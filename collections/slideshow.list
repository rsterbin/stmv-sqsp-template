<div class="owl-carousel" id="carousel_{collection.id}">
  {.repeated section items}
    <div class="fill-item" style="background-image: url({image})">
        <a href="{clickthrough}" class="caption">{caption}{if tag} <button class="button hollow small caption-tag">{tag}</button>{end}</a>
    </div>
  {end}
</div>

<script>
$(document).ready(function (){
    $("#carousel_{collection.id}").owlCarousel({
        singleItem: true,
        autoPlay: true,
        navigation: true,
        navigationText: [ '&#x00ab;', '&#x00bb;' ],
        pagination: false,
        afterInit: function() { cropImages('carousel_{collection.id}'); },
        afterUpdate: function() { cropImages('carousel_{collection.id}'); }
    });
});
</script>

