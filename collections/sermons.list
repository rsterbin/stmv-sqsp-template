<h1>Sermons</h1>

<!--ITEM LOOP-->
<div class="sermons-post-list">
  {.repeated section items}
  <div id="post-{id}" class="sermons-post {@|item-classes}" data-item-id="{id}">
    <h4 class="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h4>
    <h5 class="date-author">
        <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
    </h5>
    <div class="sermons-body">
    {.if excerpt}
      {excerpt}
      <a class="link" href="{fullUrl}">Read More <i class="fa fa-arrow-circle-o-right"></i></a>
    {.or}
      {body}
    {.end}
    </div>
  </div>
  {.end}
</div>

<!--PAGINATION-->
{.if pagination}
  <nav class="pagination">
    {.if pagination.prevPage}
      <span class="prev"><a href="{pagination.prevPageUrl}" class="older">&larr;</a></span>
    {.or}
      <span class="disabled prev">&larr;</span>
    {.end}
    {.if pagination.nextPage}
      <span class="next"><a href="{pagination.nextPageUrl}" class="newer">&rarr;</a></span>
    {.or}
      <span class="disabled next">&rarr;</span>
    {.end}
  </nav>
{.end}

