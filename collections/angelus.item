<h1><a href="{collection.fullUrl}">The Angelus</a></h1>

{.section item}

<div class="row column">
  <div id="post-{id}" class="angelus-post-single {@|item-classes}" data-item-id="{id}">

    <div class="angelus-metadata">
    {.if categories}
        {.repeated section categories}
        <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
        {.end}
    {.end}
        <br />
        <time datetime="{addedOn|date %F}">{addedOn|date %B %e, %Y}</time>
    </div>

    <h4 class="title">{title}</h4>

    {body}

    {postItemInjectCode}    

    <div class="row column liturgical-calendar-week" rel="{addedOn|date %Y-%m-%d}">
        <h2 class="week-title"></h2>
        <div class="week-services"></div>
    </div>

    <div class="share"></div>
    <div class="comment-share-like">
        {.passthrough?}{.or}{.section sourceUrl}<a href="{sourceUrl}" class="source" target="_blank" title="Source">Source</a>{.end}{.end}
        {.comments?}
          {.if websiteSettings.disqusShortname}
            {@|comment-link}
          {.or}
            {.section publicCommentCount}
            <a class="comments" href="{fullUrl}#commentsWrapper" title="Comments">
                {@} Comment{@|pluralize}
            </a>
            {.or}
                <a class="comments" href="{fullUrl}#commentsWrapper" title="Comments">Comment</a>
            {.end}
          {.end}
        {.end}
        {.if websiteSettings.simpleLikingEnabled}<a class="like" title="Like this">{@|like-button}</a>{.end}
        {@|social-button-inline}
    </div>

  </div>
</div>

{.end}

{.section pagination}

<div class="row angelus-pagination">
    <div class="small-4 large-5 columns prev">
        {.section prevItem}
        <a href="{fullUrl}">&larr;<strong>{addedOn|date %B %d, %Y}</strong><br>{title}</a>
        {.or}
        <span class="empty">&larr;</span>
        {.end}
    </div>
    <div class="small-4 large-2 columns current">&bull;</div>
    <div class="small-4 large-5 columns next">
        {.section nextItem}
        <a href="{fullUrl}">&rarr;<strong>{addedOn|date %B %d, %Y}</strong><br>{title}</a>
        {.or}
        <span class="empty">&rarr;</span>
        {.end}
    </div>
</div>
{.end}

{.section item}
  {.comments?}
<div class="row column angelus-comments" id="comments-{id}" class="comments-wrapper">
    {@|comments}
</div>
  {.end}
{.end}

